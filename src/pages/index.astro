---
import Layout from "../layouts/Layout.astro";
import "@fontsource/montserrat";
import "@fontsource/dm-sans";
const date = new Date().getFullYear();
---

<Layout title="Welcome to Astro.">
  <main class="bg-[#f7f4f2] font-sans pt-[2rem] pl-5 text-[#101010] w-full">
    <nav>
      <h3 class="font-montserrat tracking-wide text-4xl">AstroUI</h3>
    </nav>

    <section class="mt-[3rem]">
      <div class="w-[250px] h-[2px] bg-[#101010]"></div>
      <h3 class="font-montserrat tracking-wide text-3xl mt-5">
        AstroUI Landing Pages
      </h3>
      <p class="mt-1 text-xl font-light">
        Presenting AstroUI, a list of landing pages that you can customize, and
        deploy for free
      </p>

      <button
        class="px-6 py-[10px] bg-[#101010] text-white font-medium mt-[2rem]"
        >Explore Pages</button
      >
      <button class="px-6 py-2 border-2 border-[#101010]">Contribute</button>
    </section>

    <section class="mt-[3rem]">
      <div class="w-[250px] h-[2px] bg-[#101010]"></div>
      <h3 class="font-montserrat tracking-wide text-3xl mt-5">
        What is included in AstroUI
      </h3>
      <p class="mt-1 text-xl font-light">
        AstroUI includes over 12 pages in total, and more will be added as the
        project grows.
      </p>

      <div class="bg-white h-[360px] w-[362px] mt-[2rem] pt-[2rem] pl-5">
        <!-- <img
          src="/images/figma_logo.png"
          class="w-[100px] object-cover h-[160px]"
          alt="figma"
          loading="lazy"
        /> -->
        <h3 class="font-montserrat tracking-wide text-3xl mt-5">
          Contributing Figma files.
        </h3>
        <p class="text-[#101010] mt-5">
          You can submit a figma file link that you want to be included in
          AstroUI. Send me an email at b.mboya@alustudent.com and I will send
          you the editable figma file for AstroUI
        </p>

        <button
          class="font-montserrat tracking-wide text-2xl mt-5 bg-[#101010] text-white px-6 py-[20px]"
          >Contribute Figma File</button
        >
      </div>
    </section>

    <section class="mt-[3rem]">
      <div class="w-[250px] h-[2px] bg-[#101010]"></div>
      <h3 class="font-montserrat tracking-wide text-3xl mt-5">
        What is included
      </h3>
      <p class="mb-[2rem]">
        Take a look at the main pages included in AstroUI Template
      </p>
      <div class="flex flex-col items-center">
        <div class="bg-[#f7f7f7] w-[300px] h-[380px] border-2 border-[#101011]">
          <img
            src="/images/snapshot.png"
            class="w-[300px] object-cover h-[340px]"
            alt="landing page"
            loading="lazy"
          />
          <h3 class="text-3xl text-center">Agencies</h3>
        </div>
      </div>

      <div class="flex flex-col items-center mt-5">
        <div class="bg-[#f7f7f7] w-[300px] h-[380px] border-2 border-[#101011]">
          <img
            src="/images/snapshot.png"
            class="w-[300px] object-cover h-[340px]"
            alt="landing page"
            loading="lazy"
          />
          <h3 class="text-3xl text-center">Portfolios</h3>
        </div>
      </div>

      <div class="flex flex-col items-center mt-5">
        <div class="bg-[#f7f7f7] w-[300px] h-[380px] border-2 border-[#101011]">
          <img
            src="/images/snapshot.png"
            class="w-[300px] object-cover h-[340px]"
            alt="landing page"
            loading="lazy"
          />
          <h3 class="text-3xl text-center">Product Demos</h3>
        </div>
      </div>

      <div class="flex flex-col items-center mt-5">
        <div class="bg-[#f7f7f7] w-[300px] h-[380px] border-2 border-[#101011]">
          <img
            src="/images/snapshot.png"
            class="w-[300px] object-cover h-[340px]"
            alt="landing page"
            loading="lazy"
          />
          <h3 class="text-3xl text-center">Product Demos</h3>
        </div>
      </div>
      <button
        class="px-6 py-[10px] bg-[#101010] text-white font-medium mt-[2rem]"
        >Contribute</button
      >
    </section>

    <foooter>
      <p class="pt-[4rem] text-center text-lg">All Rights Reserved, Astro UI</p>
    </foooter>
  </main>
</Layout>
