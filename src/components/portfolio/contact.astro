<section
  class="bg-black h-[100vh] text-white pl-5 pt-[5rem] md:pt-[8rem]"
  id="contacts"
>
  <div
    class="flex flex-col justify-center items-center lg:items-start lg:flex-row"
  >
    <div class="lg:w-[600px]">
      <h3 class="text-[3rem] font-medium tracking-tight leading-10">
        Want to create Something Great?
      </h3>
      <h3 class="text-[2.5rem] font-medium tracking-tight leading-10 mt-[1rem]">
        Shoot me an email
      </h3>
    </div>
    <form class="mt-[3rem]">
      <div class="flex flex-col">
        <label for="name" class="text-xl">Name</label>
        <input
          type="text"
          name="name"
          id="name"
          placeholder="Your Name"
          class="w-[300px] border-[2px] border-gray-800 bg-black px-4 py-2 rounded-md mt-2 focus:ring-white"
        />
      </div>
      <div class="flex flex-col mt-5">
        <label for="email" class="text-xl">Email</label>
        <input
          type="email"
          name="email"
          id="email"
          placeholder="Your Email"
          class="w-[300px] border-[2px] border-gray-800 bg-black px-4 py-2 rounded-md mt-2 focus:ring-white"
        />
      </div>
      <div class="flex flex-col mt-5">
        <label for="message" class="text-xl">Message</label>
        <textarea
          name="message"
          id="message"
          cols="1"
          rows="10"
          class="w-[300px] border-[2px] border-gray-800 bg-black px-4 py-2 rounded-md mt-2 focus:ring-white"
          placeholder="Your Message"></textarea>
      </div>
      <button
        type="submit"
        class="bg-purple-400 px-4 py-2 w-[200px] rounded-md cursor-pointer mt-[2rem] font-medium mb-[3rem]"
        >Send</button
      >
    </form>
  </div>
</section>
